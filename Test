#!/bin/bash

echo "\nMETACORE"
cd ../MetaCore/src
dotnet test

echo "\nMETAART"
cd ../../MetaArt/MetaArt
dotnet test

echo "\nMETA3D"
cd ../Meta3D
dotnet test

echo "\nMETABUTTON"
cd ../../MetaButton/src
dotnet test -p:MSBuildExtensionsPath="/Library/Frameworks/Mono.framework/Versions/6.12.0/lib/mono/xbuild;/Library/Frameworks/Mono.framework/External/xbuild/;/Applications/Visual Studio (Preview).app/Contents/MonoBundle/AddIns/MonoDevelop.Docker/MSbuild"

echo "\nMETAART_VIEWERS"
cd ../../MetaArt/MetaArt.Viewers
dotnet test MetaArt.Viewers.sln /p:EnableWindowsTargeting=true
#dotnet test MetaArt.Xamarin.sln

cd ../../MetaArt